@using System.Windows;
@using System.Web.UI.WebControls;
@model AntennaHousePdf.Models.CommentedPdf
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
@Html.Partial("_Header")
<div style="width:30%;margin: 0 auto;background-color:white;" class="well">
    @using (Html.BeginForm("CommentExport", "PdfTools", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return checkFiles()" }
                                        ))
    {
        @Html.ValidationSummary()
        <div class="form-group">
            <label style="text-align:left;width:70%">Upload Pdf</label>
            @Html.TextBoxFor(m => m.Pdf, new
       {
           type = "file",
           name = "file",
           style = "width:100%",
           accept = ".pdf",
           id = "pdfFile",
       })
        </div>
        <div class="text-center" style="padding-bottom:.2in">
            <input class="btn btn-primary" type="submit" value="Build Export" id="buildExport" />
        </div>
    }
</div>
</div>
<script>
    function checkFiles() {
        var filePath = document.getElementById('pdfFile').value;
        if (filePath.length < 1) {
            alert("Select a pdf file");
            return false;
        }
    }
</script>
    </div>
</body>
</html>

