@using System.Windows;
@using System.Web.UI.WebControls;
@model AntennaHousePdf.UserProfile
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--
    <link rel="stylesheet" type="text/css" href="~/Content/StyleSheet1.css" />-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!--
    <link href="~/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.min.js"></script>-->
    <script src="~/jquery/jquery-3.1.1.min.js"></script>
    <!--
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.1/jquery.mobile-1.2.1.min.css" />
    <script src="http://code.jquery.com/mobile/1.2.1/jquery.mobile-1.2.1.min.js"></script>-->
    <script src="~/jquery/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/jquery/jquery-ui.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/icons/rcmIcon.ico" />

    <title>AntennaHouse</title>
    <style>
        .btn-primary:hover,
        .btn-primary:active,
        .btn-primary.active,
        .btn-primary:focus {
            color: #ffffff;
            background-color: #00BCD4;
            border-color: #285e8e;
        }

        .btn-primary {
            background-color: #0168B3;
            border-color: #00BCD4;
        }

        .well {
            background-color: white;
            border-color: #00BCD4;
        }
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Login</h4></div>
        <div class="panel-body">
            <div style="text-align:center;padding-bottom:10px">
                <image src="~/images/RCMTLogo.jpg" height="160px" width="600px" />
            </div>
            
            <div style="width:30%;margin: 0 auto;">
                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label for="email">UserName:</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", Type = "password" })
                    </div>
                    <div style="padding-bottom:.2in">
                        <input class="btn btn-primary" type="submit" style="font-weight:bold" value="Submit" />
                    </div>
                }
            </div>
                                                                                            </div>
    </div>
</body>
</html>










